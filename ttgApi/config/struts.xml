<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />

	<package name="coupon" namespace="/coupon" extends="struts-default">

		<default-action-ref name="index" />

		<action name="*" class="cn.com.ttg.action.CouponAction" method="{1}">
			<result name="index">/WEB-INF/coupon/coupon_index.jsp</result>
			<result name="test">/WEB-INF/coupon/test.jsp</result>
			
		</action> 
	</package>
	
	<package name="default" namespace="/" extends="struts-default">
	
		<action name="shop" class="cn.com.ttg.action.ShopAction" method="shop">
			<result name="success">/WEB-INF/shop/shop.jsp</result>
		</action>
	</package>


	<!-- Add packages here -->

</struts>
